<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.fzu.anop.mapper.CustomGroupMapper">
    <resultMap id="BaseResultMap" type="edu.fzu.anop.pojo.Group">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="creation_date" jdbcType="TIMESTAMP" property="creationDate"/>
        <result column="permission" jdbcType="TINYINT" property="permission"/>
    </resultMap>
    <select id="listUserManageGroups" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select g.id, g.user_id, g.title, g.remark, g.creation_date, g.permission
        from noti_group as g
        join noti_group_user as u on g.id = u.group_id and u.user_id = #{userId,jdbcType=INTEGER} and u.is_admin = 1
    </select>
</mapper>